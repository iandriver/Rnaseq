name: filters_only
description: Juan's pipeline (text filters only)
stepnames: header export2fq filterQuality filterLowComplex 


header: 
  pass:

export2fq:
  input: ${readsfile}
  output: ${readsfile}.fq

filterQuality:
  input: ${readsfile}.fq
  output: ${readsfile}.qual_OK.fq
  filtered: ${readsfile}.bowtie_qual_BAD.fq
  args: -v

filterLowComplex:
  input: ${readsfile}.qual_OK.fq
  output: ${readsfile}.complex_OK.fq
  filtered: ${readsfile}.bowtie_complex_BAD.fq
  args: -v

