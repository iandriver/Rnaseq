name: filters_only
description: Juan's pipeline (text filters only)
stepnames: header export2fq filterQuality filterLowComplex 


header: 
  pass:

export2fq:
  input: ${readset['reads_file']}
  output: ${ID}.fq
  args: solexa2fastq

filterQuality:
  input: ${ID}.fq
  output: ${ID}.qual_OK.fq
  filtered: ${ID}.bowtie_qual_BAD.fq
  args: -v

filterLowComplex:
  input: ${ID}.qual_OK.fq
  output: ${ID}.complex_OK.fq
  filtered: ${ID}.bowtie_complex_BAD.fq
  args: -v

